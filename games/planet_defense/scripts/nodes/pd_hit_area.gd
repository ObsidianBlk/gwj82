extends Area2D
class_name PDHitArea


# ------------------------------------------------------------------------------
# Signals
# ------------------------------------------------------------------------------
signal hit()

# ------------------------------------------------------------------------------
# Override Methods
# ------------------------------------------------------------------------------
func _ready() -> void:
	area_entered.connect(_on_area_entered)

# ------------------------------------------------------------------------------
# Handler Methods
# ------------------------------------------------------------------------------
func _on_area_entered(area : Area2D) -> void:
	if area.has_method(&"die"):
		area.die()
		hit.emit()
