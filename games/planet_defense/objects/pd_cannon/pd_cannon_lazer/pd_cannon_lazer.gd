extends Node2D


# ------------------------------------------------------------------------------
# Constants
# ------------------------------------------------------------------------------
const GAME_HEIGHT : float = -120
const SPEED : float = 40.0

# ------------------------------------------------------------------------------
# Override Methods
# ------------------------------------------------------------------------------
func _process(delta: float) -> void:
	position.y -= SPEED * delta
	if position.y <= GAME_HEIGHT:
		queue_free()

# ------------------------------------------------------------------------------
# Handler Methods
# ------------------------------------------------------------------------------
func _on_hit_area_hit() -> void:
	queue_free()
